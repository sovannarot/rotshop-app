---
const { lang } = Astro.params;
import ProductShow from "@/components/ProductShow";
import Layout from "@/layouts/Layout.astro";
---

<Layout lang={lang} where="Promotion"
  ><div class="flex flex-col w-full justify-center items-center">
    <h2 class="text-3xl w-[300px] text-center mt-2" transition:name="title">
      {lang == "En" ? "Promotions" : "ទំនិញប្រមូលសិន"}
    </h2>
    <ProductShow lang={lang} promotion={true} client:visible />
  </div></Layout
>
